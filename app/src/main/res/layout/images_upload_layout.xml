<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <EditText
        android:id="@+id/txt_pdfName"
        android:textSize="22sp"
        android:hint="@string/nama_file"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_below="@id/txt_pdfName"
        android:text="@string/upload_file"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_retrieve"
        android:text="@string/view_file"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btn_lihat"/>

</RelativeLayout>