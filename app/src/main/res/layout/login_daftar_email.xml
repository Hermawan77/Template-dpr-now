<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center"
    android:fontFamily="@font/arial"
    tools:context=".Login_Activity.Login_email_daftar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="50dp">

        <!--menampilkan gambr-->
        <ImageView
            android:id="@+id/logodaftaremail"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:src="@drawable/you_tube_logo"/>

        <!--untuk menampilkan text yang dapat diedit-->
        <EditText
            android:id="@+id/E_maildaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_below="@id/logodaftaremail"
            android:hint="@string/e_mail"
            android:textSize="15sp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_email"/>

        <EditText
            android:id="@+id/passworddaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/E_maildaftar"
            android:textSize="15sp"
            android:padding="10dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_lock"/>

        <!--untuk mempilkan text-->
        <TextView
            android:id="@+id/punyaakun"
            android:text="@string/sudah_punya_akun"
            android:layout_below="@id/passworddaftar"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sudahpunya"
            android:text="@string/klik_disini"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/passworddaftar"
            android:layout_toRightOf="@id/punyaakun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/daftarakun"
            android:layout_below="@+id/punyaakun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daftar"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/white"
            android:background="@drawable/colorbutton"/>

    </RelativeLayout>

</RelativeLayout>