<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/button_borderless">

        <LinearLayout
            android:id="@+id/anggota_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_borderless">

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/anggota_image"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/anggota_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/anggota_fraksi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Fraksi"/>

                <TextView
                    android:id="@+id/anggota_dapil"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Dapil" />

                <TextView
                    android:id="@+id/anggota_daftarakd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Daftar Akd"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>