<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--bagian untuk membuat tab layout-->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarprofil"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dpr_now"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textColor="@android:color/white"
            android:fontFamily="@font/f_arial"/>

    </android.support.v7.widget.Toolbar>

    <!--untuk menampilkan gambar-->
    <ImageView
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbarprofil"
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/you_tube_logo"/>

    <!--untuk mempilkan text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        tools:text="John Doe"
        android:id="@+id/profile_text"
        android:textSize="16sp"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <!--untuk mempilkan text-->
    <TextView
        android:textSize="14sp"
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        tools:text="johndoe@gmail.com"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_text"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/profile_email"
        android:gravity="center"
        android:orientation="vertical">

        <!--untuk mempilkan text-->
        <TextView
            android:id="@+id/pengaturan"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pengaturan" />

        <!--untuk mempilkan text-->
        <TextView
            android:id="@+id/info"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/informasi" />

        <TextView
            android:id="@+id/signOut"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout" />

    </LinearLayout>


</RelativeLayout>