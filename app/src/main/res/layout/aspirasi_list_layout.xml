<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/button_borderless"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/button_borderless">

                <!--untuk menampilkan text-->
                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nama_lengkap"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <!--untuk menampilkan text-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jenis_kelamin"/>
                        <TextView
                            android:id="@+id/textViewRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/radio" />
                        <TextView
                            android:id="@+id/textViewPilihan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/technical"/>

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                                <!--untuk menampilkan text-->
                                <TextView
                                    android:id="@+id/textViewDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date"
                                    android:layout_marginRight="15dp"/>

                                <TextView
                                    android:id="@+id/textViewTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"
                                    android:text="Email            "/>

                                <!--untuk menampilkan text-->
                                <TextView
                                    android:id="@+id/textViewEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/email_user"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"
                                    android:text="No Hp           "/>

                                <!--untuk menampilkan text-->
                                <TextView
                                    android:id="@+id/textViewPhone"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:text="@string/_6280000" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"
                                    android:text="Pilihan           "/>

                                <!--untuk menampilkan text-->
                                <TextView
                                    android:id="@+id/textViewCheckbox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/checkbox" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"
                                    android:text="Persentase  "/>

                                <!--untuk menampilkan text-->
                                <TextView
                                    android:id="@+id/textViewSeekbar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/seekbar" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewEssai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/isi_aspirasi_anda"
                            android:padding="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                        <!--untuk menampilkan gambar -->
                        <ImageView
                            android:id="@+id/gambarviewlist"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                                <!--bagian untuk membuat tombol-->
                                <Button
                                    android:id="@+id/buttonEdit"
                                    android:layout_width="75dp"
                                    android:layout_height="35dp"
                                    android:textSize="10sp"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/button_border"
                                    android:text="@string/edit" />

                                <!--bagian untuk membuat tombol-->
                                <Button
                                    android:id="@+id/buttonDelete"
                                    android:layout_width="75dp"
                                    android:layout_height="35dp"
                                    android:layout_margin="5dp"
                                    android:textSize="10sp"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/colorbutton"
                                    android:text="@string/delete" />

                        </LinearLayout>

                </LinearLayout>

        </LinearLayout>



</LinearLayout>